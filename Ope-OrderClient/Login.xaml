<Window x:Class="Ope_OrderClient.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ope_OrderClient"
        mc:Ignorable="d"
        Title="Login" Height="495.975" Width="813.932">
    <StackPanel>
        <Label Content="First name:"/>
        <TextBox x:Name="LoginName"/>
        <Label Content="Password:"/>
        <TextBox x:Name="LoginPassword"/>
        <Button Content="Login" Click="Login_Click"/>
        <ListView x:Name="OrderList" Height="300"/>
        <Button Content="Hide" Click="Hide_Click"/>
        <Button Content="Refresh" Click="Refresh_Click"/>
    </StackPanel>
</Window>
